class Solution {
    public int[] shuffle(int[] nums, int n) {

        int arr[] = new int[2 * n];

        int x=0;
        int y=0;

        for(int i =0; i<2*n;i++){
            arr[i] = nums[x];
            x++;
            arr[i+1] = nums[n+y];
            y++;
            i++;
         }

         return arr;

    }
}